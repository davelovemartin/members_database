<div class="row">
    <h1>Add User</h1>
    <p>Add access to the Clifton Arts Club Members' database.</p>
  </div><!-- end of row -->
  <div class="row">
    <hr>
    </div><!-- end of row -->


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :email %>
    </div><!-- end of col -->
    <div class="form-group col-md-4">
      <%= f.email_field :email, autofocus: true, :size => nil, :class => 'form-control' %>
    </div><!-- end of col -->
  </div><!-- end of row -->

  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :password %>
    </div><!-- end of col -->
    <div class="form-group col-md-4">
      <%= f.password_field :password, autocomplete: "off", :size => nil, :class => 'form-control' %>
    </div><!-- end of col -->
    <div class="col-md-6">
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %></div><!-- end of col -->
  </div><!-- end of row -->

  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :password_confirmation %>
    </div><!-- end of col -->
    <div class="form-group col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", :size => nil, :class => 'form-control' %>
    </div><!-- end of col -->
  </div><!-- end of row -->
    <div class="row">
      <div class="col-md-2 col-md-offset-2 ">
        <%= f.submit "Add User", class: 'btn btn-lg btn-success' %>
    </div><!-- end of col -->
  </div><!-- end of row -->
  
<% end %>
  <div class="row">
    <hr>
  </div><!-- end of row -->
  <div class="row">
    <div class="col-md-offset-2 col-md-2">
      <%= render "devise/shared/links" %>
    </div><!-- end of col -->
  </div><!-- end of row -->


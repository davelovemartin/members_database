<div class="row">
    <h1>Edit <%= resource_name.to_s.humanize %></h1>
    <p>Access the Clifton Arts Club Members' database.</p>
  </div><!-- end of row -->
  <div class="row">
    <hr>
  </div><!-- end of row -->


<%= form_for(resource, as: resource_name, url: edit_registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
      <div class="form-group col-md-2">
        <%= f.label :email %>
      </div><!-- end of col -->
      <div class="form-group col-md-4">
        <%= f.email_field :email, autofocus: true, :size => nil, :class => 'form-control' %>
      </div><!-- end of col -->
  </div><!-- end of row -->
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div class="row">
      <div class="form-group col-md-6">
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      </div><!-- end of col -->
  </div><!-- end of row -->
  <% end %>
  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :password %>
    </div><!-- end of col -->
    <div class="form-group col-md-4">
      <%= f.password_field :password, autocomplete: "off", :size => nil, :class => 'form-control' %>
    </div><!-- end of col -->
    <div class="col-md-6">
      <i>(leave blank if you don't want to change it)</i>
    </div><!-- end of col -->
  </div><!-- end of row -->
  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :password_confirmation %>
    </div><!-- end of col -->
    <div class="form-group col-md-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", :size => nil, :class => 'form-control' %>
    </div><!-- end of col -->
  </div><!-- end of row -->
  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :current_password %>
    </div><!-- end of col -->
    <div class="form-group col-md-4">
      <%= f.password_field :current_password, autocomplete: "off", :size => nil, :class => 'form-control' %>
    </div><!-- end of col -->
    <div class="col-md-6">
      <i>(we need your current password to confirm your changes)</i>
    </div><!-- end of col -->
  </div><!-- end of row -->
  <div class="row">
    <hr>
  </div><!-- end of row -->
  <div class="row">
    <div class="col-md-1 col-md-offset-9 ">
      <%= f.submit "Update", class: 'btn btn-lg btn-success' %>
    </div><!-- end of col -->
    <div class="col-md-1">
      <%= link_to "Cancel", :back , class: 'btn btn-lg btn-default', data: { confirm: "Are you sure?" } %>
    </div><!-- end of col -->
  </div><!-- end of row -->
<% end %>
<div class="row">
    <h1>Resend unlock instructions</h1>
    <p>Access the Clifton Arts Club Members' database.</p>
  </div><!-- end of row -->
  <div class="row">
    <hr>
    </div><!-- end of row -->

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="form-group col-md-2">
      <%= f.label :email %>
    </div><!-- end of col -->
    <div class="form-group col-md-4">
      <%= f.email_field :email, autofocus: true %></div><!-- end of col -->
  </div><!-- end of row -->
    <div class="row">
      <div class="col-md-2 col-md-offset-2 ">
        <%= f.submit "Resend unlock instructions", class: 'btn btn-lg btn-success' %>
    </div><!-- end of col -->
  </div><!-- end of row -->
  
<% end %>
  <div class="row">
    <hr>
  </div><!-- end of row -->
  <div class="row">
    <div class="col-md-offset-2 col-md-2">
      <%= render "devise/shared/links" %>
    </div><!-- end of col -->
  </div><!-- end of row -->